  "description": "Wildlife patrolling tools",
  "type": "group",
  "id": 1,
  "items": [
    {
      "type": "alias",
      "name": "Toggle patrolling",
      "enabled": true,
      "id": 2,
      "matching": "exact",
      "whole_words": false,
      "case_sensitive": false,
      "prefix_suffix": true,
      "actions": [
        {
          "action": "script",
          "script": "if (!!client.patrol) {\n    client.patrol = false;\n    display_notice('Patrolling disabled', 'red');\n} else {\n    client.patrol = true;\n    display_notice('Patrolling enabled', 'green');\n}"
        }
      ],
      "text": "patrol"
    },
    {
      "type": "function",
      "name": "onGMCP",
      "enabled": true,
      "id": 70,
      "code": "// Place any code here you'd like to run when a GMCP message is received\n// - The GMCP message is received as \"args.gmcp_method\" and \"args.gmcp_args\"\nif (args.gmcp_method == 'Room.Info') {\n    run_function('roomChangeHook', args, 'Patrolling');\n}",
      "items": []
    },
    {
      "type": "function",
      "name": "roomChangeHook",
      "enabled": true,
      "id": 7,
      "code": "function enableGroup(name) {\n    reflex_enable(reflex_find_by_name('group', name, true, false, 'Patrolling'));\n}\n\nlet isPatrolling = !!client.patrol;\nlet environment = args.gmcp_args.environment;\nlet roomName = args.gmcp_args.name;\nlet plants = {};\n\n// Could add whatever the thing is for digging, I guess...\nif (!isPatrolling ||\n    roomName.startsWith('In the trees above ') ||\n    roomName.startsWith('Flying above ')) {\n    return;\n}\n\nswitch (environment) {\n    case 'Forest':\n        plants.echinacea = false;\n        plants.ginger = false;\n        plants.lobelia = false;\n        plants.myrrh = false;\n        plants.ginseng = false;\n        plants.elm = false;\n        plants.burdock = false;\n        plants.nuts = false;\n        enableGroup('Forest');\n        break;\n    case 'Garden':\n        plants.ginger = false;\n        plants.lobelia = false;\n        plants.myrrh = false;\n        plants.ginseng = false;\n        plants.elm = false;\n        plants.fruit = false;\n        plants.vegetable = false;\n        enableGroup('Garden');\n        break;\n    case 'Grasslands':\n        plants.goldenseal = false;\n        plants.slipper = false;\n        plants.sugarcane = false;\n        plants.grain = false;\n        enableGroup('Grasslands');\n        break;\n    case 'Hills':\n        plants.bayberry = false;\n        plants.hawthorn = false;\n        enableGroup('Hills');\n        break;\n    case 'Jungle':\n        plants.kola = false;\n        plants.kuzu = false;\n        plants.skullcap = false;\n        plants.cacao = false;\n        plants.fruit = false;\n        enableGroup('Jungle');\n        break;\n    case 'Swamp':\n        plants.ash = false;\n        plants.bellwort = false;\n        plants.cohosh = false;\n        enableGroup('Swamp');\n        break;\n    case 'Mountains':\n        plants.valerian = false;\n        enableGroup('Mountains');\n        break;\n    case 'Desert':\n        plants.pear = false;\n        plants.weed = false;\n        enableGroup('Desert');\n        break;\n    case 'Natual underground':\n        plants.bloodroot = false;\n        plants.moss = false;\n        plants.lumic = false;\n        enableGroup('Underground');\n        break;\n    case 'Valley':\n        plants.sileris = false;\n        plants.olive = false;\n        enableGroup('Valley');\n        break;\n    case 'Freshwater':\n    case 'River':\n    case 'Water':\n    case 'Ocean':\n        plants.kelp = false;\n        enableGroup('Water');\n        break;\n}\n\nclient.patrolPlants = plants;"
    },
    {
      "type": "function",
      "name": "roomCheckedHook",
      "enabled": true,
      "id": 10,
      "code": "let plants = client.patrolPlants;\nlet missingPlants = Object.entries(plants)\n\t.filter((item) => !item[1])\n\t.map((item) => item[0]);\n\nif (missingPlants.length > 0) {\n\tdisplay_notice('Missing: ' + missingPlants.join(', '), 'red');\n}\n\nlet thisGroup = reflex_find_by_name('group', args, true, false, 'Patrolling');\nreflex_disable(thisGroup);"
    },
